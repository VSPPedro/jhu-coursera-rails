<h1>Recipes#index</h1>
<p>Find me in app/views/recipes/index.html.erb</p>

<p>Powered By Food2Fork.com</p>

<table border="1">
  <tr>
    <th>Thumbnail</th>
    <th>Title</th>
    <th>Social Rank</th>
  </tr>
  <% @recipes_found.each do |recipe| %>
    <tr class=<%= cycle('even', 'odd') %>>
      <td><%= link_to image_tag(recipe["image_url"], size: "100x100"), recipe["f2f_url"] %></td>
      <td><%= link_to sanitize(recipe["title"]), recipe["f2f_url"] %></td>
      <td><%= recipe["social_rank"] %></td>
    </tr>
  <% end %>
</table>
